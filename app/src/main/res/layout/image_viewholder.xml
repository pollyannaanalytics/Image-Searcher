<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="hit"
            type="com.pollyannawu.gogolook.data.dataclass.Hit" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/standard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/standard"
                >
                <ImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    imageUrl="@{hit.userImageURL}"
                    android:background="@drawable/circle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHeight_percent="0.1"
                    app:layout_constraintDimensionRatio="1"
                    />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/user_avatar"
                    app:layout_constraintTop_toTopOf="@id/user_avatar"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginLeft="@dimen/standard"
                    android:text="@{hit.user}"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/user_avatar"
                    />


                <ImageView
                    android:id="@+id/preview_image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="center"
                    android:layout_marginVertical="@dimen/standard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/user_avatar"
                    app:layout_constraintDimensionRatio="1"
                    imageUrl="@{hit.previewURL}"
                    android:src="@drawable/gogolook"
                    />
                <TextView
                    android:id="@+id/like_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(hit.likes)}"
                    android:layout_marginTop="@dimen/standard_half"
                    app:layout_constraintTop_toBottomOf="@id/preview_image"
                    app:layout_constraintStart_toStartOf="@id/like_icon"
                    app:layout_constraintEnd_toEndOf="@id/like_icon"
                    />
                <ImageView
                    android:id="@+id/like_icon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/like_icon"
                    android:layout_marginTop="@dimen/standard_half"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.05"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintTop_toBottomOf="@id/like_number" />
                <TextView
                    android:id="@+id/download_number"
                    android:text="@{String.valueOf(hit.downloads)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/like_number"
                    app:layout_constraintBottom_toBottomOf="@id/like_number"
                    app:layout_constraintStart_toStartOf="@id/download_icon"
                    app:layout_constraintEnd_toEndOf="@id/download_icon"

                    />
                <ImageView
                    android:id="@+id/download_icon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/download_icon"
                    android:layout_marginEnd="@dimen/standard"
                    app:layout_constraintHeight_percent="0.05"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintTop_toTopOf="@id/like_icon"
                    app:layout_constraintBottom_toBottomOf="@id/like_icon"
                    app:layout_constraintEnd_toStartOf="@id/view_icon"
                    />
                <TextView
                    android:id="@+id/view_number"
                    android:text="@{String.valueOf(hit.views)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/like_number"
                    app:layout_constraintBottom_toBottomOf="@id/like_number"
                    app:layout_constraintStart_toStartOf="@id/view_icon"
                    app:layout_constraintEnd_toEndOf="@id/view_icon"
                    />
                <ImageView
                    android:id="@+id/view_icon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                   android:src="@drawable/view_icon"
                    app:layout_constraintTop_toTopOf="@id/like_icon"
                    app:layout_constraintBottom_toBottomOf="@id/like_icon"
                    app:layout_constraintEnd_toStartOf="@id/comment_icon"
                    android:layout_marginEnd="@dimen/standard"
                    app:layout_constraintHeight_percent="0.05"
                    app:layout_constraintDimensionRatio="1"
                    />
                <TextView
                    android:id="@+id/comment_number"
                    android:text="@{String.valueOf(hit.comments)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/like_number"
                    app:layout_constraintBottom_toBottomOf="@id/like_number"
                    app:layout_constraintStart_toStartOf="@id/comment_icon"
                    app:layout_constraintEnd_toEndOf="@id/comment_icon"
                    />
                <ImageView
                    android:id="@+id/comment_icon"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/comment_icon"
                    app:layout_constraintTop_toTopOf="@id/like_icon"
                    app:layout_constraintBottom_toBottomOf="@id/like_icon"
                    app:layout_constraintEnd_toStartOf="@id/like_icon"
                    android:layout_marginEnd="@dimen/standard"
                    app:layout_constraintHeight_percent="0.05"
                    app:layout_constraintDimensionRatio="1"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>